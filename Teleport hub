-- üìå TELEPORT HUB + AUTO ACCEPT GIFT SYSTEM (WITH TOGGLE + NOTIFICATION) + DRAGGABLE GUI
-- LocalScript (StarterPlayerScripts or StarterGui)

local Players = game:GetService("Players")
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local LocalPlayer = Players.LocalPlayer

-- ==== UI SETUP ====
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "TeleportHub"
screenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

-- Main frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 240, 0, 380)
frame.Position = UDim2.new(0, 40, 0, 120)
frame.BackgroundColor3 = Color3.fromRGB(0, 85, 170) -- üîµ blue background
frame.BorderSizePixel = 0
frame.Active = true 
frame.Draggable = true 
frame.Parent = screenGui

-- Rounded corners
local corner = Instance.new("UICorner")
corner.CornerRadius = UDim.new(0,12)
corner.Parent = frame

-- White outline (UIStroke)
local frameStroke = Instance.new("UIStroke")
frameStroke.Color = Color3.fromRGB(255,255,255)
frameStroke.Thickness = 2
frameStroke.Parent = frame

-- Drop shadow
local shadow = Instance.new("ImageLabel")
shadow.Size = UDim2.new(1,20,1,20)
shadow.Position = UDim2.new(0,-10,0,-10)
shadow.BackgroundTransparency = 1
shadow.Image = "rbxassetid://1316045217"
shadow.ImageColor3 = Color3.fromRGB(0,0,0)
shadow.ImageTransparency = 0.5
shadow.ScaleType = Enum.ScaleType.Slice
shadow.SliceCenter = Rect.new(10,10,118,118)
shadow.ZIndex = 0
shadow.Parent = frame

-- Title
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 35)
title.Text = "Teleport Hub"
title.TextColor3 = Color3.fromRGB(255,255,255)
title.Font = Enum.Font.SourceSansBold
title.TextSize = 20
title.BackgroundColor3 = Color3.fromRGB(0, 65, 140) 
title.BorderSizePixel = 0
title.Parent = frame

local titleCorner = Instance.new("UICorner")
titleCorner.CornerRadius = UDim.new(0,12)
titleCorner.Parent = title

-- Auto Accept Toggle Button
local autoAccept = false
local toggleBtn = Instance.new("TextButton")
toggleBtn.Size = UDim2.new(1, -10, 0, 30)
toggleBtn.Position = UDim2.new(0,5,0,40)
toggleBtn.Text = "Auto Accept: OFF"
toggleBtn.BackgroundColor3 = Color3.fromRGB(50,120,200)
toggleBtn.TextColor3 = Color3.fromRGB(255,255,255)
toggleBtn.Font = Enum.Font.SourceSansBold
toggleBtn.TextSize = 16
toggleBtn.Parent = frame

local toggleCorner = Instance.new("UICorner")
toggleCorner.CornerRadius = UDim.new(0,8)
toggleCorner.Parent = toggleBtn

local toggleStroke = Instance.new("UIStroke")
toggleStroke.Color = Color3.fromRGB(255,255,255)
toggleStroke.Thickness = 1.5
toggleStroke.Parent = toggleBtn

toggleBtn.MouseButton1Click:Connect(function()
    autoAccept = not autoAccept
    if autoAccept then
        toggleBtn.Text = "Auto Accept: ON"
        toggleBtn.BackgroundColor3 = Color3.fromRGB(0,170,255) 
    else
        toggleBtn.Text = "Auto Accept: OFF"
        toggleBtn.BackgroundColor3 = Color3.fromRGB(50,120,200) 
    end
end)

-- Scrolling list for players
local scrollingFrame = Instance.new("ScrollingFrame")
scrollingFrame.Size = UDim2.new(1, -10, 1, -80)
scrollingFrame.Position = UDim2.new(0,5,0,75)
scrollingFrame.CanvasSize = UDim2.new(0,0,0,0)
scrollingFrame.ScrollBarThickness = 6
scrollingFrame.BackgroundTransparency = 0.2
scrollingFrame.BackgroundColor3 = Color3.fromRGB(0,65,140)
scrollingFrame.Parent = frame

local scrollCorner = Instance.new("UICorner")
scrollCorner.CornerRadius = UDim.new(0,8)
scrollCorner.Parent = scrollingFrame

-- Function to refresh player list
local function refreshPlayers()
    scrollingFrame:ClearAllChildren()
    local y = 0
    for _, player in pairs(Players:GetPlayers()) do
        if player ~= LocalPlayer then
            local btn = Instance.new("TextButton")
            btn.Size = UDim2.new(1, -5, 0, 30)
            btn.Position = UDim2.new(0,0,0,y)
            btn.Text = "Teleport to " .. player.Name
            btn.BackgroundColor3 = Color3.fromRGB(0,100,200)
            btn.TextColor3 = Color3.fromRGB(255,255,255)
            btn.Font = Enum.Font.SourceSans
            btn.TextSize = 16
            btn.Parent = scrollingFrame

            local btnCorner = Instance.new("UICorner")
            btnCorner.CornerRadius = UDim.new(0,6)
            btnCorner.Parent = btn

            local btnStroke = Instance.new("UIStroke")
            btnStroke.Color = Color3.fromRGB(255,255,255)
            btnStroke.Thickness = 1
            btnStroke.Parent = btn

            -- Teleport logic
            btn.MouseButton1Click:Connect(function()
                if LocalPlayer.Character and player.Character then
                    local hrp = LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
                    local targetHrp = player.Character:FindFirstChild("HumanoidRootPart")
                    if hrp and targetHrp then
                        hrp.CFrame = targetHrp.CFrame + Vector3.new(0,3,0)
                    end
                end
            end)

            y = y + 35
        end
    end
    scrollingFrame.CanvasSize = UDim2.new(0,0,0,y)
end

Players.PlayerAdded:Connect(refreshPlayers)
Players.PlayerRemoving:Connect(refreshPlayers)
refreshPlayers()

-- ==== NOTIFICATION FUNCTION ====
local function showNotification(msg)
    local notif = Instance.new("TextLabel")
    notif.Size = UDim2.new(0, 200, 0, 40)
    notif.Position = UDim2.new(0.5, -100, 0, 20)
    notif.BackgroundColor3 = Color3.fromRGB(0, 150, 80) -- green
    notif.TextColor3 = Color3.fromRGB(255, 255, 255)
    notif.Font = Enum.Font.SourceSansBold
    notif.TextSize = 18
    notif.Text = msg
    notif.BackgroundTransparency = 0
    notif.Parent = screenGui
    notif.ZIndex = 10

    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 10)
    corner.Parent = notif

    -- fade out after 3 seconds
    task.delay(3, function()
        for i = 0, 1, 0.1 do
            notif.BackgroundTransparency = i
            notif.TextTransparency = i
            task.wait(0.05)
        end
        notif:Destroy()
    end)
end

-- ==== AUTO ACCEPT GIFT SYSTEM (with toggle + notif) ====
-- ‚ö†Ô∏è Palitan ang "GiftEvent" kung iba ang pangalan ng tunay na RemoteEvent ng laro
local giftEvent = ReplicatedStorage:WaitForChild("GiftEvent", 10)

if giftEvent and giftEvent:IsA("RemoteEvent") then
    print("‚úÖ GiftEvent found in ReplicatedStorage.")

    giftEvent.OnClientEvent:Connect(function(sender, gift)
        print("üì¶ Gift received from ".. tostring(sender.Name) ..": ".. tostring(gift))
        if autoAccept then
            giftEvent:FireServer("accept", sender, gift)
            print("‚úÖ Auto accepted gift from ".. sender.Name)
            showNotification("üéÅ Accepted gift from ".. sender.Name)
        else
            print("‚ùå Auto accept is OFF. Gift ignored.")
        end
    end)
else
    warn("‚ùå GiftEvent not found in ReplicatedStorage. Check the actual RemoteEvent name!")
    for _, v in ipairs(ReplicatedStorage:GetDescendants()) do
        if v:IsA("RemoteEvent") then
            print("üîé Found RemoteEvent:", v.Name)
        end
    end
end
