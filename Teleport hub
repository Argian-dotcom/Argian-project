	screenGui.Enabled = true
	miniBtn.Visible = false
end)

-- ========= FUNCTIONS =========
local function createBtn(txt, callback)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(1, -20, 0, 40)
	btn.Position = UDim2.new(0, 10, 0, 0)
	btn.BackgroundColor3 = Color3.fromRGB(70, 70, 70)
	btn.Text = txt
	btn.TextColor3 = Color3.new(1, 1, 1)
	btn.Font = Enum.Font.SourceSansBold
	btn.TextSize = 18
	btn.Parent = buttonFrame
	btn.MouseButton1Click:Connect(callback)
	local corner = Instance.new("UICorner", btn)
	corner.CornerRadius = UDim.new(0, 8)
	return btn
end

-- Teleport to Player
local function refreshPlayerList()
	playerList:ClearAllChildren()
	local layout = UIListLayout:Clone()
	layout.Parent = playerList
	for _, plr in ipairs(Players:GetPlayers()) do
		if plr ~= LocalPlayer then
			local tpBtn = Instance.new("TextButton")
			tpBtn.Size = UDim2.new(1, -10, 0, 30)
			tpBtn.BackgroundColor3 = Color3.fromRGB(80, 80, 80)
			tpBtn.Text = "Teleport to " .. plr.Name
			tpBtn.TextColor3 = Color3.new(1, 1, 1)
			tpBtn.Font = Enum.Font.SourceSans
			tpBtn.TextSize = 16
			tpBtn.Parent = playerList
			tpBtn.MouseButton1Click:Connect(function()
				if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("HumanoidRootPart") and plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") then
					LocalPlayer.Character.HumanoidRootPart.CFrame = plr.Character.HumanoidRootPart.CFrame + Vector3.new(2,0,0)
				end
			end)
			local corner = Instance.new("UICorner", tpBtn)
			corner.CornerRadius = UDim.new(0, 6)
		end
	end
end

Players.PlayerAdded:Connect(refreshPlayerList)
Players.PlayerRemoving:Connect(refreshPlayerList)
refreshPlayerList()

-- Leave Game (no jumpscare)
createBtn("üö™ Leave Game", function()
	LocalPlayer:Kick("üëã")
end)

-- Copy Discord Link
createBtn("üìã Copy Discord", function(btn)
	setclipboard("https://discord.gg/argiandev")
	btn.Text = "‚úÖ Copied!"
	task.delay(2, function()
		btn.Text = "üìã Copy Discord"
	end)
end)

