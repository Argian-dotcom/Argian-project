local submitBtn = Instance.new("TextButton")
submitBtn.Size = UDim2.new(0.5, -15, 0, 40)
submitBtn.Position = UDim2.new(0, 10, 0, 100)
submitBtn.BackgroundColor3 = Color3.fromRGB(0, 120, 200)
submitBtn.Text = "Submit"
submitBtn.TextColor3 = Color3.new(1, 1, 1)
submitBtn.Font = Enum.Font.SourceSansBold
submitBtn.TextSize = 18
submitBtn.Parent = keyFrame

local UICornerSubmit = Instance.new("UICorner", submitBtn)
UICornerSubmit.CornerRadius = UDim.new(0, 8)

-- secret key
local SECRET_KEY = "ARGIAN"

submitBtn.MouseButton1Click:Connect(function()
	if keyBox.Text == SECRET_KEY then
		screenGui.Enabled = true   -- enable yung tunay na GUI
		keyGui.Enabled = false     -- i-hide lang, wag i-destroy
	else
		keyBox.Text = ""
		keyBox.PlaceholderText = "‚ùå Wrong key!"
	end
end)
