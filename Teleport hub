-- ‚ú® VIP PREMIUM TELEPORT HUB (BIGGER VERSION + FIXED HIDE NAME + INVISIBLE MODE + 1s AUTO LEAVE)
-- LocalScript (StarterPlayerScripts or StarterGui)

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local TweenService = game:GetService("TweenService")

-- ==== UI SETUP ====
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "VIP_TeleportHub"
screenGui.Parent = LocalPlayer:WaitForChild("PlayerGui")

-- Main frame
local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 160, 0, 300) -- üî• mas mataas kasi may invisible button
frame.Position = UDim2.new(0, 50, 0, 80)
frame.BackgroundColor3 = Color3.fromRGB(15,15,15)
frame.BorderSizePixel = 0
frame.Active = true 
frame.Draggable = true 
frame.Parent = screenGui
Instance.new("UICorner", frame).CornerRadius = UDim.new(0,14)

-- Gold glowing stroke
local frameStroke = Instance.new("UIStroke")
frameStroke.Color = Color3.fromRGB(255, 215, 0)
frameStroke.Thickness = 2
frameStroke.ApplyStrokeMode = Enum.ApplyStrokeMode.Border
frameStroke.Parent = frame

-- Title
local title = Instance.new("TextLabel")
title.Size = UDim2.new(1, 0, 0, 30)
title.Text = "üëë VIP Hub üëë"
title.TextColor3 = Color3.fromRGB(255,215,0)
title.Font = Enum.Font.GothamBlack
title.TextSize = 16
title.BackgroundColor3 = Color3.fromRGB(25,25,25)
title.BorderSizePixel = 0
title.Parent = frame
Instance.new("UICorner", title).CornerRadius = UDim.new(0,12)

-- Glow animation
task.spawn(function()
	while true do
		local tween1 = TweenService:Create(title, TweenInfo.new(1, Enum.EasingStyle.Quad), {TextColor3 = Color3.fromRGB(255, 255, 180)})
		local tween2 = TweenService:Create(title, TweenInfo.new(1, Enum.EasingStyle.Quad), {TextColor3 = Color3.fromRGB(255, 215, 0)})
		tween1:Play()
		tween1.Completed:Wait()
		tween2:Play()
		tween2.Completed:Wait()
	end
end)

-- ‚úÖ Notification Label
local notify = Instance.new("TextLabel")
notify.Size = UDim2.new(1, -8, 0, 20)
notify.Position = UDim2.new(0, 4, 0, -22)
notify.BackgroundTransparency = 1
notify.TextColor3 = Color3.fromRGB(255, 223, 120)
notify.Font = Enum.Font.GothamBold
notify.TextSize = 12
notify.Text = ""
notify.Parent = frame

local function showNotify(msg)
	notify.Text = msg
	task.delay(2, function()
		if notify.Text == msg then
			notify.Text = ""
		end
	end)
end

-- Player List
local scrollingFrame = Instance.new("ScrollingFrame")
scrollingFrame.Size = UDim2.new(1, -8, 1, -130)
scrollingFrame.Position = UDim2.new(0,4,0,32)
scrollingFrame.CanvasSize = UDim2.new(0,0,0,0)
scrollingFrame.ScrollBarThickness = 5
scrollingFrame.BackgroundTransparency = 0.3
scrollingFrame.BackgroundColor3 = Color3.fromRGB(20,20,20)
scrollingFrame.Parent = frame
Instance.new("UICorner", scrollingFrame).CornerRadius = UDim.new(0,10)

-- üîÆ INVISIBLE BUTTON
local invisBtn = Instance.new("TextButton")
invisBtn.Size = UDim2.new(1, -8, 0, 26)
invisBtn.Position = UDim2.new(0,4,1,-90)
invisBtn.Text = "üîÆ Go Invisible"
invisBtn.BackgroundColor3 = Color3.fromRGB(30,30,30)
invisBtn.TextColor3 = Color3.fromRGB(255,215,0)
invisBtn.Font = Enum.Font.GothamSemibold
invisBtn.TextSize = 13
invisBtn.Parent = frame
Instance.new("UICorner", invisBtn).CornerRadius = UDim.new(0,10)

local invisStroke = Instance.new("UIStroke")
invisStroke.Color = Color3.fromRGB(255,215,0)
invisStroke.Thickness = 1
invisStroke.Parent = invisBtn

local invisible = false

local function setInvisible(state)
	if LocalPlayer.Character then
		for _, part in pairs(LocalPlayer.Character:GetDescendants()) do
			if part:IsA("BasePart") then
				if part.Name ~= "HumanoidRootPart" then
					part.Transparency = state and 1 or 0
				end
			elseif part:IsA("Decal") then
				part.Transparency = state and 1 or 0
			end
		end
	end
end

invisBtn.MouseButton1Click:Connect(function()
	invisible = not invisible
	setInvisible(invisible)
	if invisible then
		invisBtn.Text = "‚ú® Visible Again"
		showNotify("üîÆ You are now Invisible")
	else
		invisBtn.Text = "üîÆ Go Invisible"
		showNotify("üëÅ You are now Visible")
	end
end)

-- üîí HIDE NAME BUTTON
local hideBtn = Instance.new("TextButton")
hideBtn.Size = UDim2.new(1, -8, 0, 26)
hideBtn.Position = UDim2.new(0,4,1,-60)
hideBtn.Text = "üôà Hide Name"
hideBtn.BackgroundColor3 = Color3.fromRGB(30,30,30)
hideBtn.TextColor3 = Color3.fromRGB(255,215,0)
hideBtn.Font = Enum.Font.GothamSemibold
hideBtn.TextSize = 13
hideBtn.Parent = frame
Instance.new("UICorner", hideBtn).CornerRadius = UDim.new(0,10)

local hideStroke = Instance.new("UIStroke")
hideStroke.Color = Color3.fromRGB(255,215,0)
hideStroke.Thickness = 1
hideStroke.Parent = hideBtn

local hidden = false

-- ‚úÖ FIXED FUNCTION TOGGLE NAME
local function toggleName(hide)
	if LocalPlayer.Character then
		local head = LocalPlayer.Character:FindFirstChild("Head")
		if head then
			for _, v in pairs(head:GetChildren()) do
				if v:IsA("BillboardGui") then
					v.Enabled = not hide
				end
			end
		end
	end
end

hideBtn.MouseButton1Click:Connect(function()
	hidden = not hidden
	toggleName(hidden)
	if hidden then
		hideBtn.Text = "üëÅ Show Name"
		showNotify("üôà Name Hidden")
	else
		hideBtn.Text = "üôà Hide Name"
		showNotify("üëÅ Name Visible")
	end
end)

-- üö™ AUTO LEAVE BUTTON (1 second)
local leaveBtn = Instance.new("TextButton")
leaveBtn.Size = UDim2.new(1, -8, 0, 26)
leaveBtn.Position = UDim2.new(0,4,1,-30)
leaveBtn.Text = "üö™ Leave (1s)"
leaveBtn.BackgroundColor3 = Color3.fromRGB(30,30,30)
leaveBtn.TextColor3 = Color3.fromRGB(255,215,0)
leaveBtn.Font = Enum.Font.GothamSemibold
leaveBtn.TextSize = 13
leaveBtn.Parent = frame
Instance.new("UICorner", leaveBtn).CornerRadius = UDim.new(0,10)

local leaveStroke = Instance.new("UIStroke")
leaveStroke.Color = Color3.fromRGB(255,215,0)
leaveStroke.Thickness = 1
leaveStroke.Parent = leaveBtn

leaveBtn.MouseButton1Click:Connect(function()
	showNotify("‚è≥ Leaving in 1s...")
	task.delay(1, function()
		showNotify("üëã Left!")
		LocalPlayer:Kick("You left the game using VIP Premium Hub")
	end)
end)

-- Auto reapply kapag respawn
LocalPlayer.CharacterAdded:Connect(function(char)
	char:WaitForChild("HumanoidRootPart")
	if invisible then task.wait(0.5) setInvisible(true) end
	if hidden then toggleName(true) end
end)

-- üîÑ Refresh Player Buttons
local function refreshPlayers()
	scrollingFrame:ClearAllChildren()
	local y = 0
	for _, player in pairs(Players:GetPlayers()) do
		if player ~= LocalPlayer then
			local btn = Instance.new("TextButton")
			btn.Size = UDim2.new(1, -2, 0, 24)
			btn.Position = UDim2.new(0,0,0,y)
			btn.Text = "üöÄ " .. player.Name
			btn.BackgroundColor3 = Color3.fromRGB(40,40,40)
			btn.TextColor3 = Color3.fromRGB(255,215,0)
			btn.Font = Enum.Font.GothamBold
			btn.TextSize = 12
			btn.Parent = scrollingFrame
			Instance.new("UICorner", btn).CornerRadius = UDim.new(0,8)

			btn.MouseButton1Click:Connect(function()
				if LocalPlayer.Character and player.Character then
					local hrp = LocalPlayer.Character:FindFirstChild("HumanoidRootPart")
					local targetHrp = player.Character:FindFirstChild("HumanoidRootPart")
					if hrp and targetHrp then
						hrp.CFrame = targetHrp.CFrame + Vector3.new(0,2,0)
						showNotify("‚úÖ Teleported to " .. player.Name)
					else
						showNotify("‚ùå Failed!")
					end
				end
			end)

			y = y + 28
		end
	end
	scrollingFrame.CanvasSize = UDim2.new(0,0,0,y)
end

Players.PlayerAdded:Connect(refreshPlayers)
Players.PlayerRemoving:Connect(refreshPlayers)
refreshPlayers()
