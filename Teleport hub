-- (PERMA HIDE OWN NAME ‚Ä¢ PANTAY TELEPORT ‚Ä¢ LEAVE W/ HIDDEN JUMPSCARE ‚Ä¢ MINIMIZE TO DRAGGABLE TITLE)
-- Run as LocalScript (executor / StarterPlayerScripts / StarterGui)

local Players = game:GetService("Players")
local LocalPlayer = Players.LocalPlayer
local TweenService = game:GetService("TweenService")
local UIS = game:GetService("UserInputService")
local CoreGui = game:GetService("CoreGui")

-- ========= UI ROOT =========
local screenGui = Instance.new("ScreenGui")
screenGui.Name = "EZPETS_GUI"
screenGui.ResetOnSpawn = CoreGui
screenGui.Parent = CoreGui

-- ========= MAIN PANEL =========
local mainFrame = Instance.new("Frame")
mainFrame.Size = UDim2.new(0, 260, 0, 340)
mainFrame.Position = UDim2.new(0.5, -130, 0.5, -170)
mainFrame.BackgroundColor3 = Color3.fromRGB(20,20,20)
mainFrame.BackgroundTransparency = 0.2
mainFrame.BorderSizePixel = 0
mainFrame.Active = true
mainFrame.Draggable = true
mainFrame.Parent = screenGui
Instance.new("UICorner", mainFrame).CornerRadius = UDim.new(0,12)

-- Title bar
local titleBar = Instance.new("Frame")
titleBar.Size = UDim2.new(1, 0, 0, 34)
titleBar.BackgroundColor3 = Color3.fromRGB(30,30,30)
titleBar.BorderSizePixel = 0
titleBar.Parent = mainFrame
Instance.new("UICorner", titleBar).CornerRadius = UDim.new(0,12)

local titleLabel = Instance.new("TextLabel")
titleLabel.Size = UDim2.new(1, -40, 1, 0)
titleLabel.Position = UDim2.new(0, 8, 0, 0)
titleLabel.BackgroundTransparency = 1
titleLabel.Font = Enum.Font.GothamBold
titleLabel.Text = "ü§ë EZ PETS ü§ë"
titleLabel.TextColor3 = Color3.fromRGB(0,255,0)
titleLabel.TextSize = 18
titleLabel.TextXAlignment = Enum.TextXAlignment.Left
titleLabel.Parent = titleBar

-- X button (upper-right)
local closeBtn = Instance.new("TextButton")
closeBtn.Size = UDim2.new(0, 30, 1, 0)
closeBtn.Position = UDim2.new(1, -34, 0, 0)
closeBtn.BackgroundTransparency = 1
closeBtn.Text = "X"
closeBtn.Font = Enum.Font.GothamBold
closeBtn.TextSize = 18
closeBtn.TextColor3 = Color3.fromRGB(255,60,60)
closeBtn.Parent = titleBar

-- Content area (scroll)
local scroll = Instance.new("ScrollingFrame")
scroll.Size = UDim2.new(1, -10, 1, -44)
scroll.Position = UDim2.new(0, 5, 0, 39)
scroll.BackgroundTransparency = 1
scroll.ScrollBarThickness = 4
scroll.Parent = mainFrame

local layout = Instance.new("UIListLayout")
layout.Padding = UDim.new(0,6)
layout.SortOrder = Enum.SortOrder.LayoutOrder
layout.HorizontalAlignment = Enum.HorizontalAlignment.Center
layout.Parent = scroll

local function autosize()
	scroll.CanvasSize = UDim2.new(0,0,0, layout.AbsoluteContentSize.Y + 10)
end
layout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(autosize)

-- ========= MINIMIZED DRAGGABLE TITLE =========
local miniFrame = Instance.new("Frame")
miniFrame.Size = UDim2.new(0, 160, 0, 34)
miniFrame.Position = UDim2.new(0.5, -80, 0, 6) -- default top-center
miniFrame.BackgroundColor3 = Color3.fromRGB(25,25,25)
miniFrame.BorderSizePixel = 0
miniFrame.Visible = false
miniFrame.Active = true
miniFrame.Parent = screenGui
Instance.new("UICorner", miniFrame).CornerRadius = UDim.new(0,12)

local miniBtn = Instance.new("TextButton")
miniBtn.Size = UDim2.new(1, 0, 1, 0)
miniBtn.BackgroundTransparency = 1
miniBtn.Text = "ü§ë EZ PETS ü§ë"
miniBtn.Font = Enum.Font.GothamBold
miniBtn.TextSize = 16
miniBtn.TextColor3 = Color3.fromRGB(0,255,0)
miniBtn.Parent = miniFrame

-- simple drag (manual) for miniFrame
do
	local dragging, dragStart, startPos
	miniFrame.InputBegan:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
			dragging = true
			dragStart = input.Position
			startPos = miniFrame.Position
		end
	end)
	UIS.InputChanged:Connect(function(input)
		if dragging and (input.UserInputType == Enum.UserInputType.MouseMovement or input.UserInputType == Enum.UserInputType.Touch) then
			local delta = input.Position - dragStart
			miniFrame.Position = UDim2.new(startPos.X.Scale, startPos.X.Offset + delta.X, startPos.Y.Scale, startPos.Y.Offset + delta.Y)
		end
	end)
	UIS.InputEnded:Connect(function(input)
		if input.UserInputType == Enum.UserInputType.MouseButton1 or input.UserInputType == Enum.UserInputType.Touch then
			dragging = false
		end
	end)
end

-- Toggle behavior
closeBtn.MouseButton1Click:Connect(function()
	mainFrame.Visible = false
	miniFrame.Visible = true
end)
miniBtn.MouseButton1Click:Connect(function()
	mainFrame.Visible = true
	miniFrame.Visible = false
end)

-- ========= HELPERS =========
local function createBtn(text, callback)
	local btn = Instance.new("TextButton")
	btn.Size = UDim2.new(1, -10, 0, 36)
	btn.BackgroundColor3 = Color3.fromRGB(40,40,40)
	btn.TextColor3 = Color3.fromRGB(255,255,255)
	btn.Font = Enum.Font.GothamBold
	btn.TextSize = 14
	btn.Text = text
	btn.AutoButtonColor = true
	btn.Parent = scroll
	Instance.new("UICorner", btn).CornerRadius = UDim.new(0,10)
	btn.MouseButton1Click:Connect(function() pcall(callback, btn) end)
	return btn
end

local function notify(msg)
	pcall(function()
		game.StarterGui:SetCore("SendNotification", {
			Title = "ü§ë EZ PETS ü§ë",
			Text = msg,
			Duration = 2
		})
	end)
end

-- ========= PERMANENT HIDE OWN NAME (LOCAL ONLY) =========
local function hideOwnName(char)
	task.wait(0.2)
	if not char then return end
	local head = char:FindFirstChild("Head")
	if head then
		for _, v in ipairs(head:GetChildren()) do
			if v:IsA("BillboardGui") then
				v.Enabled = false
				v:Destroy()
			end
		end
	end
	local hum = char:FindFirstChildOfClass("Humanoid")
	if hum then
		hum.DisplayDistanceType = Enum.HumanoidDisplayDistanceType.None
		hum.NameDisplayDistance = 0
		hum.HealthDisplayDistance = 0
	end
end

-- apply now + on respawn + keep cleaning if some script recreates it
if LocalPlayer.Character then hideOwnName(LocalPlayer.Character) end
LocalPlayer.CharacterAdded:Connect(function(char)
	char:WaitForChild("Humanoid", 5)
	char:WaitForChild("Head", 5)
	hideOwnName(char)
	-- anti-recreate loop (light)
	task.spawn(function()
		for i=1,60 do -- ~60 ticks (~30s) gentle cleanup
			if char and char.Parent and char:FindFirstChild("Head") then
				for _, v in ipairs(char.Head:GetChildren()) do
					if v:IsA("BillboardGui") then v:Destroy() end
				end
			end
			task.wait(0.5)
		end
	end)
end)

-- ========= LEAVE (HIDDEN JUMPSCARE) =========
local function leaveWithScreen()
	local overlay = Instance.new("ScreenGui")
	overlay.IgnoreGuiInset = true
	overlay.Parent = CoreGui

	local bg = Instance.new("Frame")
	bg.Size = UDim2.new(1,0,1,0)
	bg.BackgroundColor3 = Color3.new(0,0,0)
	bg.BackgroundTransparency = 1
	bg.Parent = overlay

	local txt = Instance.new("TextLabel")
	txt.Size = UDim2.new(1,0,1,0)
	txt.BackgroundTransparency = 1
	txt.Text = "I LOVE YOU"
	txt.TextColor3 = Color3.fromRGB(255,0,0)
	txt.Font = Enum.Font.GothamBlack
	txt.TextScaled = true
	txt.TextTransparency = 1
	txt.Parent = overlay

	TweenService:Create(bg, TweenInfo.new(0.4), {BackgroundTransparency = 0}):Play()
	TweenService:Create(txt, TweenInfo.new(0.5), {TextTransparency = 0}):Play()

	local sound = Instance.new("Sound")
	sound.SoundId = "rbxassetid://4590662766"
	sound.Volume = 3
	sound.Parent = overlay
	sound:Play()

	task.wait(1.6)
	LocalPlayer:Kick("üëã")
end

-- ========= BUTTONS =========
createBtn("üö™ Leave Game", function()
	leaveWithScreen()
end)

-- Players label
local playersLabel = Instance.new("TextLabel")
playersLabel.Size = UDim2.new(1, -10, 0, 22)
playersLabel.BackgroundTransparency = 1
playersLabel.Text = "Players:"
playersLabel.Font = Enum.Font.GothamBold
playersLabel.TextColor3 = Color3.fromRGB(200,200,200)
playersLabel.TextSize = 14
playersLabel.TextXAlignment = Enum.TextXAlignment.Left
playersLabel.Parent = scroll

-- Teleport list (pantay pos + facing)
local function buildPlayerButtons()
	-- clear old player buttons
	for _, c in ipairs(scroll:GetChildren()) do
		if c:IsA("TextButton") and c ~= nil and (c.Text:find("Teleport to ") or c.Name == "PlayerBtn") then
			c:Destroy()
		end
	end
	for _, p in ipairs(Players:GetPlayers()) do
		if p ~= LocalPlayer then
			local pBtn = Instance.new("TextButton")
			pBtn.Name = "PlayerBtn"
			pBtn.Size = UDim2.new(1, -10, 0, 32)
			pBtn.BackgroundColor3 = Color3.fromRGB(50,50,50)
			pBtn.TextColor3 = Color3.fromRGB(255,255,255)
			pBtn.Font = Enum.Font.Gotham
			pBtn.TextSize = 13
			pBtn.Text = "Teleport to "..p.DisplayName.." (@"..p.Name..")"
			pBtn.Parent = scroll
			Instance.new("UICorner", pBtn).CornerRadius = UDim.new(0,8)

			pBtn.MouseButton1Click:Connect(function()
				local myChar = LocalPlayer.Character
				local targetChar = p.Character
				if myChar and targetChar and myChar:FindFirstChild("HumanoidRootPart") and targetChar:FindFirstChild("HumanoidRootPart") then
					myChar.HumanoidRootPart.CFrame = targetChar.HumanoidRootPart.CFrame
					notify("üåÄ Teleported to "..p.DisplayName)
				else
					notify("‚ùå "..p.Name.." not available")
				end
			end)
		end
	end
	autosize()
end

buildPlayerButtons()
Players.PlayerAdded:Connect(buildPlayerButtons)
Players.PlayerRemoving:Connect(buildPlayerButtons)
